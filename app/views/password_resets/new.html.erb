<h1>Forgot your password?</h1>

<%= form_with url: password_reset_path do |form| %>

    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "steve@apple.com" %>
    </div>

    <div class="mb-3">
        <!-- rails 6
        <%= form.submit "Sign Up", class: "btn btn-primary" %>-->
        
        <!-- rails 7 -->
        <%= form.submit "Reset Password", class: "btn btn-primary", data: { turbo_frame: 'passwordforgot_frame'} %>
    </div>

<% end %>